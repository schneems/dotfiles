[branch]
  autosetupmerge = true
  autosetuprebase = always
[push]
  default = current
[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
[help]
  autocorrect = 1
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
[github]
  user = rails
[branch "master"]
  remote = origin
  merge = refs/heads/master