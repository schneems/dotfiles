#!/usr/bin/env bash

# which -a python

export HATCHET_EXPENSIVE_MODE=1
export VISUAL="vim" # https://unix.stackexchange.com/questions/4859/visual-vs-editor-what-s-the-difference
export EDITOR="vim"
export PATH="/usr/local/bin:/usr/local/sbin:~/bin:~/root/bin:~/bin/dotfiles/bin/:$PATH"
export GOPATH="$HOME/documents/projects/gohomecode"
export PATH="$GOPATH/bin:$PATH"
export PATH="/usr/local/opt/qt@5.5/bin:$PATH" # export PATH="$(brew --prefix qt@5.5)/bin:$PATH"
export QMAKE="/usr/local/opt/qt@5.5/bin/qmake" #"$(brew --prefix qt@5.5)/bin/qmake"
export OBJC_DISABLE_INITIALIZE_FORK_SAFETY=YES # https://stackoverflow.com/questions/52671926/rails-may-have-been-in-progress-in-another-thread-when-fork-was-called


export MAKEFLAGS="$MAKEFLAGS --jobs $(sysctl -n hw.ncpu)"

export PATH=$PATH:/usr/local/opt/go/libexec/bi

export NVM_DIR="$HOME/.nvm"

export PATH="$HOME/.cargo/bin:$PATH"
export NODE_PATH="/usr/local/lib/node"
export DISABLE_SPRING="true"

# Set PATH, CDPATH, EDITOR, etc.
export CPPFLAGS=-I/opt/X11/include

# rb-env
# eval "$(rbenv init -)"
source /usr/local/opt/chruby/share/chruby/chruby.sh
chruby 3.1 # $(chruby | tail -n 1 | sed s/*//) # grabs the latest installed ruby

